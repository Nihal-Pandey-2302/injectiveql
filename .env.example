# Application
NODE_ENV=development
PORT=4000

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=injectiveql
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Injective Network
INJECTIVE_NETWORK=mainnet
INJECTIVE_RPC=https://k8s.mainnet.tm.injective.network:443
INJECTIVE_INDEXER=https://k8s.mainnet.indexer.injective.network

# N1NJ4 Identity (Optional - Bonus Track)
N1NJ4_CONTRACT=inj1... # Replace with actual N1NJ4 NFT contract address
N1NJ4_PREMIUM_THRESHOLD=3 # Number of NFTs required for premium tier

# Rate Limiting (requests per hour)
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_STANDARD=500
RATE_LIMIT_PREMIUM=2000

# Cache TTL (in seconds)
CACHE_MARKET_METADATA=300 # 5 minutes
CACHE_ORDERBOOK=30
CACHE_METRICS=300
CACHE_IDENTITY=3600 # 1 hour

# Logging
LOG_LEVEL=info
